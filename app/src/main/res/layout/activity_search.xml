<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#BDF4FB"
    tools:context=".Search">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="114dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:text="Search"
        android:textColor="#75A340"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="83dp"
        android:layout_height="46dp"
        android:layout_marginTop="144dp"
        android:text="SurahId"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/searchbysurah"
        app:layout_constraintEnd_toStartOf="@+id/searchbysurah"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/searchbysurah"
        android:layout_width="263dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#C5F7FD"
        android:hint="enter surah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/geteng"
        android:layout_width="228dp"
        android:layout_height="48dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#235725"
        android:backgroundTintMode="add"
        android:text="Mufti Taqi Usmani"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchbysurah" />

    <Button
        android:id="@+id/geturdu"
        android:layout_width="228dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#316A33"
        android:text="Mehmood ul Hassan"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/geteng" />

    <Button
        android:id="@+id/geteng2"
        android:layout_width="228dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#4C672D"
        android:text="DR Mohsin Khan"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/geturdu" />

    <Button
        android:id="@+id/geturdu2"
        android:layout_width="230dp"
        android:layout_height="48dp"
        android:backgroundTint="#3F5526"
        android:text="Fateh Muh Jalandhri"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/geteng2"
        app:layout_constraintVertical_bias="0.037" />

</androidx.constraintlayout.widget.ConstraintLayout>