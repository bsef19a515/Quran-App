<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#BDF4FB"
    tools:context=".Search">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:text="Search"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="83dp"
        android:layout_height="46dp"
        android:layout_marginTop="144dp"
        android:text="SurahId"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/searchbysurah"
        app:layout_constraintEnd_toStartOf="@+id/searchbysurah"
        app:layout_constraintHorizontal_bias="0.842"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/searchbysurah"
        android:layout_width="263dp"
        android:layout_height="50dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#C5F7FD"
        android:hint="enter surah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.873"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/searchbtn"
        android:layout_width="122dp"
        android:layout_height="53dp"
        android:layout_marginTop="40dp"
        android:background="#225924"
        android:backgroundTint="#235725"
        android:text="Find"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchbysurah" />

    <ListView
        android:id="@+id/listview2"
        android:layout_width="359dp"
        android:layout_height="353dp"
        android:layout_marginTop="49dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchbtn" />
</androidx.constraintlayout.widget.ConstraintLayout>